syntax = "v1"

type RequestBase {
    Base string `json:"base"`
}

type Request {
    RequestBase

    Name string `path:"name,options=you|me"`
}

type Response {
    Message string `json:"message"`
}

@server (
    prefix: /api/v1
    group: hello
)
service demo-api {
    @handler DemoHandler
    post /hello/:name (Request) returns (Response)
}

